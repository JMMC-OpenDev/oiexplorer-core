<!--
  This file describes a set of plotdefinition to be used has plot configuration presets 
-->
<p:plotDefinitions
   xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns:p='http://www.jmmc.fr/oiexplorer-core-plot-definition/0.1'
   xsi:schemaLocation='http://www.jmmc.fr/oiexplorer-core-plot-definition/0.1 PlotDefinition.xsd'>
    
              
    
    <!-- plot (Vis2 - T3) vs spatial freq  -->    
    <plotDefinition>
        <skipFlaggedData>false</skipFlaggedData>
        <drawLine>false</drawLine>
        <xAxis>
            <name>SPATIAL_FREQ</name>
            <logScale>false</logScale>
            <includeZero>true</includeZero>
            <!-- TODO : refaire l'equivalent de    
            plotDef.setxAxisScalingFactor(1e-6d);
            plotDef.setxAxisUnit("M\u03BB");
            -->
        </xAxis>
        <yAxes>
            <name>VIS2DATA</name>
            <logScale>false</logScale>
            <includeZero>false</includeZero>
        </yAxes>
        <yAxes>
            <name>T3PHI</name>
            <logScale>false</logScale>
            <includeZero>false</includeZero>
        </yAxes> 
    </plotDefinition>
    
    <!-- plot(Vis2 - T3) vs wavelength     -->    
    <plotDefinition>
        <skipFlaggedData>false</skipFlaggedData>
        <drawLine>false</drawLine>
        <xAxis>
            <name>EFF_WAVE</name>
            <logScale>false</logScale>
            <includeZero>false</includeZero>
            <!-- TODO : refaire l'equivalent de 
            plotDef.setxAxisScalingFactor(1e6d);
            plotDef.setxAxisUnit("micrometer");
            -->
        </xAxis>
        <yAxes>
            <name>VIS2DATA</name>
            <logScale>false</logScale>
            <includeZero>false</includeZero>
        </yAxes>
        <yAxes>
            <name>T3PHI</name>
            <logScale>false</logScale>
            <includeZero>false</includeZero>
        </yAxes> 
    </plotDefinition>
    
    <!-- plot(Vis2 - T3) vs mjd            -->
    <plotDefinition>
        <skipFlaggedData>false</skipFlaggedData>
        <drawLine>false</drawLine>
        <xAxis>
            <name>MJD</name>
            <logScale>false</logScale>
            <includeZero>false</includeZero>
        </xAxis>
        <yAxes>
            <name>VIS2DATA</name>
            <logScale>false</logScale>
            <includeZero>false</includeZero>
        </yAxes>
        <yAxes>
            <name>T3PHI</name>
            <logScale>false</logScale>
            <includeZero>false</includeZero>
        </yAxes> 
    </plotDefinition>
</p:plotDefinitions>
